import numpy as np
# Створіть одновимірний масив (вектор) з першими 10-ма натуральними числами та виведіть його значення.
vector = np.arange(1, 11)
print("Завдання 1. Вектор з першими 10-ма натуральними числами:")
print(vector)
# Створіть двовимірний масив (матрицю) розміром 4x4, заповніть його одиницями та виведіть його значення.
matrix_ones = np.ones((4, 4))
print("Завдання 2:")
print("Матриця розміром 4x4, заповнена одиницями:")
print(matrix_ones)
print("="*50)
# Створіть масив розміром 4x4, заповніть його випадковими цілими числами в діапазоні від 1 до 5 та виведіть його значення.
matrix_random_int = np.random.randint(1, 6, (4, 4))
print("\nЗавдання 3. Матриця 4x4, заповнена випадковими цілими числами в діапазоні від 1 до 5:")
print(matrix_random_int)
# Створіть масив розміром 3x3, заповніть його випадковими дійсними числами в діапазоні від 0 до 1 та виведіть його значення.
matrix_random_float = np.random.rand(3, 3)
print("\nЗавдання 4. Матриця 3x3, заповнена випадковими дійсними числами в діапазоні від 0 до 1:")
print(matrix_random_float)
# Створіть два одновимірних масиви розміром 6, заповніть їх випадковими цілими числами в діапазоні від 1 до 20 та виконайте на них поелементні операції додавання, віднімання та множення.
array1 = np.random.randint(1, 21, 6)
array2 = np.random.randint(1, 21, 6)
addition = array1 + array2
subtraction = array1 - array2
multiplication = array1 * array2
print("\nЗавдання 5: Результати поелементних операцій над двома векторами:")
print("Перший вектор:", array1)
print("Другий вектор:", array2)
print("Результат додавання:", addition)
print("Результат віднімання:", subtraction)
print("Результат множення:", multiplication)
# Створіть два матриці 2x2, заповніть їх довільними цілими числами та знайдіть їх добуток.
matrix_a = np.random.randint(1, 11, (2, 2))
matrix_b = np.random.randint(1, 11, (2, 2))
product = np.dot(matrix_a, matrix_b)
print("\nЗавдання 6: Добуток двох матриць розміром 2x2:")
print("Перша матриця:")
print(matrix_a)
print("Друга матриця:")
print(matrix_b)
print("Результат множення матриць:")
print(product)
# Створіть дві матриці розміром 3x2 та 2x4, заповніть їх випадковими цілими числами в діапазоні від 1 до 10 та перемножте їх між собою.
matrix_c = np.random.randint(1, 11, (3, 2))
matrix_d = np.random.randint(1, 11, (2, 4))
product_cd = np.dot(matrix_c, matrix_d)
print("\nЗавдання 7: Результат множення матриць розміром 3x2 та 2x4:")
print("Перша матриця (3x2):")
print(matrix_c)
print("Друга матриця (2x4):")
print(matrix_d)
print("Добуток цих двох матриць:")
print(product_cd)
# Створіть матрицю розміром 2x2, заповніть її випадковими цілими числами в діапазоні від 1 до 7 та знайдіть її обернену матрицю.
matrix_2x2 = np.random.randint(1, 8, (2, 2))
inverse_matrix_2x2 = np.linalg.inv(matrix_2x2)
print("\nЗавдання 8: Обернена матриця для наступної матриці розміром 2x2:")
print("Оригінальна матриця:")
print(matrix_2x2)
print("Обернена матриця:")
print(inverse_matrix_2x2)
# Створіть матрицю розміром 3x3, заповніть її випадковими дійсними числами в діапазоні від 0 до 1 та транспонуйте її.
matrix_3x3 = np.random.rand(3, 3)
transposed_matrix = matrix_3x3.T
print("\nЗавдання 9: Транспонування матриці розміром 3x3:")
print("Оригінальна матриця:")
print(matrix_3x3)
print("Транспонована матриця:")
print(transposed_matrix)
# Створіть матрицю розміром 3x4 та вектор розміром 4x1, заповніть їх випадковими цілими числами в діапазоні від 1 до 10 та знайдіть добуток матриці на вектор.
matrix_3x4 = np.random.randint(1, 11, (3, 4))
vector_4x1 = np.random.randint(1, 11, (4, 1))
product_matrix_vector = np.dot(matrix_3x4, vector_4x1)
print("\nЗавдання 10: Добуток матриці 3x4 на вектор 4x1:")
print("Матриця:")
print(matrix_3x4)
print("Вектор:")
print(vector_4x1)
print("Результат множення:")
print(product_matrix_vector)
# Створіть матрицю розміром 2x3 та вектор розміром 3x1, заповніть матрицю випадковими цілими числами в діапазоні від 1 до 10, а вектор - випадковими цілими числами в діапазоні від 1 до 10, і знайдіть добуток матриці на вектор.
matrix_2x3 = np.random.randint(1, 11, (2, 3))
vector_3x1 = np.random.randint(1, 11, (3, 1))
product_matrix_vector_2x3 = np.dot(matrix_2x3, vector_3x1)
print("\nЗавдання 11: Результат множення матриці 2x3 на вектор 3x1:")
print("Матриця:")
print(matrix_2x3)
print("Вектор:")
print(vector_3x1)
print("Добуток:")
print(product_matrix_vector_2x3)
# Створіть дві матриці розміром 2x2, заповніть їх випадковими цілими числами в діапазоні від 1 до 10 та знайдіть їхню суму.
matrix_2x2_1 = np.random.randint(1, 11, (2, 2))
matrix_2x2_2 = np.random.randint(1, 11, (2, 2))
sum_2x2 = matrix_2x2_1 + matrix_2x2_2
print("\nЗавдання 12: Сума двох матриць розміром 2x2:")
print("Перша матриця:")
print(matrix_2x2_1)
print("Друга матриця:")
print(matrix_2x2_2)
print("Сума матриць:")
print(sum_2x2)
# Створіть дві матриці розміром 2x2, заповніть їх випадковими дійсними числами в діапазоні від 0 до 1 та знайдіть їх добуток.
matrix_2x2_float1 = np.random.rand(2, 2)
matrix_2x2_float2 = np.random.rand(2, 2)
product_2x2_float = np.dot(matrix_2x2_float1, matrix_2x2_float2)
print("\nЗавдання 13. Добуток двох матриць 2x2 з дійсними числами:")
print("Матриця 1:")
print(matrix_2x2_float1)
print("Матриця 2:")
print(matrix_2x2_float2)
print("Добуток матриць:")
print(product_2x2_float)
# Створіть матрицю розміром 5x5, заповніть її випадковими дійсними числами в діапазоні від 0 до 1 та знайдіть суму елементів матриці.
matrix_5x5 = np.random.rand(5, 5)
sum_matrix_5x5 = np.sum(matrix_5x5)
print("\nЗавдання 14. Сума елементів матриці 5x5:")
print("Матриця:")
print(matrix_5x5)
print("Сума елементів:")
print(sum_matrix_5x5)
# Створіть матрицю розміром 3x3, заповніть її випадковими дійсними числами в діапазоні від -1 до 1 та знайдіть вектор-стовпчик, що містить суму елементів кожного рядка матриці.
matrix_3x3_neg1_1 = np.random.uniform(-1, 1, (3, 3))
sum_vector = np.sum(matrix_3x3_neg1_1, axis=1).reshape(-1, 1)
print("\nЗавдання 15. Вектор-стовпчик з сумою елементів кожного рядка матриці 3x3:")
print("Матриця:")
print(matrix_3x3_neg1_1)
print("Вектор-стовпчик з сумами:")
print(sum_vector)
